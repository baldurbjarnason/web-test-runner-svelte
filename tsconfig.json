{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["DOM", "ES2017", "WebWorker", "es6"],
    "types": ["node", "mocha"]
  }
}
